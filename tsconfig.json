{
    "compilerOptions": {
        "types": [
            // add node as an option
            "node",
            "reflect-metadata"
        ],
        "allowJs": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "DOM"
        ],

        "rootDirs": ["."], //仅用来控制输出的目录结构--outDir。
        "outDir": "./dist", //重定向输出目录。
        "moduleResolution": "node",
        "experimentalDecorators":true,  // 支持装饰器
        "emitDecoratorMetadata": true,  // 装饰器元数据
        "esModuleInterop":true
    },
    "include": [
        "./**/*.ts",
        "./**/signer.js"
    ],
    "exclude": [
        "./dist/**/*.*",
        "node_modules",
    ]
}